{
  "name": "vscode-ppm-view",
  "displayName": "PPM View",
  "description": "PBM/PGM/PPM/PAM view for VSCode",
  "icon": "assets/logo.png",
  "version": "0.0.4",
  "private": true,
  "publisher": "jtlehtinen",
  "packageManager": "pnpm@8.12.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtlehtinen/vscode-ppm-view"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "vscode-ppm-view.ppm",
        "displayName": "PPM View",
        "selector": [
          {
            "filenamePattern": "*.ppm"
          },
          {
            "filenamePattern": "*.pgm"
          },
          {
            "filenamePattern": "*.pbm"
          },
          {
            "filenamePattern": "*.pam"
          },
          {
            "filenamePattern": "*.pnm"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "npm run build -- --watch --sourcemap",
    "vscode:prepublish": "npm run build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/node": "^18.19.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
