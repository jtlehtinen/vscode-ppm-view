{
  "name": "vscode-ppm-view",
  "displayName": "PPM View",
  "description": "PBM/PGM/PPM/PAM view for VSCode",
  "icon": "assets/logo.png",
  "version": "0.0.4",
  "private": true,
  "publisher": "jtlehtinen",
  "packageManager": "pnpm@10.22.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtlehtinen/vscode-ppm-view"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "vscode-ppm-view.ppm",
        "displayName": "PPM View",
        "selector": [
          {
            "filenamePattern": "*.ppm"
          },
          {
            "filenamePattern": "*.pgm"
          },
          {
            "filenamePattern": "*.pbm"
          },
          {
            "filenamePattern": "*.pam"
          },
          {
            "filenamePattern": "*.pnm"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "npm run build -- --watch --sourcemap",
    "vscode:prepublish": "npm run build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.1",
    "@vscode/vsce": "^3.7.0",
    "bumpp": "^10.3.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  }
}
